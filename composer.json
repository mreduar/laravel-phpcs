{
    "name": "mreduar/laravel-phpcs",
    "description": "PHP Codesniffer ruleset to follow Laravel's coding style",
    "keywords": [
        "mreduar",
        "laravel-phpcs",
        "phpcs",
        "php",
        "coding-style",
        "coding sniffer",
        "coding-standard"
    ],
    "homepage": "https://github.com/mreduar/laravel-phpcs",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Eduar Bastidas",
            "email": "eduarbatidas10@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "slevomat/coding-standard": "^8.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Mreduar\\LaravelPhpcs\\": "src"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mreduar\\LaravelPhpcs\\LaravelPhpcsServiceProvider"
            ]
        }
    }
}
